{
    "$schema": "https://raw.githubusercontent.com/F5Networks/f5-appsvcs-extension/master/schema/latest/as3-schema-3.21.0-4.json",
    "class": "AS3",
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.21.0",
        "id": "SSCICT",
        "SSCICT": {
            "class": "Tenant",
            "exch_test": {
                "class": "Application",
                "template": "http",
                "serviceMain": {
                    "class": "Service_HTTP",
                    "remark": "SSC-ICT Exchange test",
                    "virtualPort": 80,
                    "virtualAddresses": [
                        "2.2.2.2"
                    ],
                    "profileTCP": {
                        "bigip": "/Common/mptcp-mobile-optimized"
                    },
                    "pool": "exch_test_pool"
                },
                "exch_test_pool": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ],
                    "minimumMembersActive": 0,
                    "loadBalancingMode": "least-sessions",
                    "members": [
                        {
                            "servicePort": 80,
                            "serverAddresses": [
                                "172.17.1.1",
                                "172.17.1.2",
                                "172.17.1.3",
                                "172.17.1.4",
                                "172.18.2.1",
                                "172.18.2.2",
                                "172.18.2.3",
                                "172.18.2.4"
                            ]
                        }
                    ]
                }
            }
        }
    }
}
